{{!-- user info div only --}}
            <div class="col-md-6 position-relative top-50 start-50 end-50 translate-middle m-2 p-5"
                style="border:1px solid black;background-color:rgba(240, 255, 255, 0.443);">
                <ul class="text-start" style="list-style-type: none;">
                    <li>
                        <label for="username">Username:</label>
                        <input type="text" name="username" id="username" placeholder="" size="25" minlength="5" required>
                    </li>
                    <li>
                        <label for="user_pwd">Password:</label>
                        <input type="password" name="password" id="password" placeholder="" size="25" minlength="5" required>
                    </li>
                    <li>
                        <label for="name">Your Name:</label>
                        <input type="text" name="name" id="name" placeholder="" size="20" minlength="3" required>
                    </li>
                    <li>
                        <label for="gender">Gender:</label>
                        <select id="gender" name="gender" required>
                            <option value="" name="" id=""></option>
                            <option value="T" name="gender" id="male">Male</option>
                            <option value="F" name="gender" id="female">Female</option>
                        </select>
                    </li>
                    <li>
                        <label for="phone_number">Phone number:</label>
                        <input type="tel" name="phone_number" id="phone_number" placeholder="" size="25" minlength="8"
                            maxlength="16" pattern="[0-9]{8}" required>
                    </li>
                    <li>
                        <label for="email">Email:</label>
                        <input type="text" name="email" id="email" placeholder="" size="30" minlength="5" maxlength="30"
                            pattern="email" required>
                    </li>
                    <br><br>
                    <button action="">Edit</button>
                    <button type="reset">Reset</button>
                    <button type="submit" value="submit">Submit</button>
                </ul>
            </div>
