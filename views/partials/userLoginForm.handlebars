{{!-- for User login --}}
<form action="/user/login" method="post">
    <div class="position-relative top-50 start-50 end-50 translate-middle"
        style="width:300px;height:300px;border:1px solid black;background-color:rgba(240, 255, 255, 0.443);">
        <h3>Login here</h3>
        <ul style="list-style-type: none;">
            <li>
                <label for="username">Username:</label>
                <input type="text" name="username" id="username" placeholder="" size="25" minlength="5" required>
            </li>
            <li>
                <label for="user_pwd">Password:</label>
                <input type="password" name="password" id="password" placeholder="" size="25" minlength="5" required>
            </li>
            <br><br>
            <button type="reset">Reset</button>
            <button type="submit" value="submit">Submit</button>
        </ul>
    </div>
</form>